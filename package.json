{
  "name": "curvaqz",
  "version": "0.0.1",
  "description": "CurvaQz webapp",
  "license": "UNLICENSED",
  "author": "Chris Hartwig",
  "type": "module",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "npm-run-all -p tailwind:watch dev:worker",
    "dev:worker": "wrangler dev",
    "build": "npm run tailwind:build && wrangler deploy --dry-run",
    "tailwind:build": "tailwindcss -i ./src/styles/input.css -o ./src/styles/tailwind.css --minify",
    "tailwind:watch": "tailwindcss -i ./src/styles/input.css -o ./src/styles/tailwind.css --watch",
    "check": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "@tailwindcss/oxide": "^4.1.17",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "wrangler": "^4.50.0"
  }
}
